{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "GDP per Capita Over Time",
    "width": 600,
    "height": 300,
    "background": "whitesmoke",
    "data": {
      "url": "https://raw.githubusercontent.com/smanve/2-assign/main/data/merged_data.csv"
    },
    "transform": [
      {"filter": "datum.Entity === 'Australia' || datum.Entity === 'India' || datum.Entity === 'Chile' || datum.Entity === 'Fiji' || datum.Entity === 'Germany' || datum.Entity === 'Nigeria' || datum.Entity === 'South Africa' || datum.Entity === 'Turkey'"}
    ],
    "layer": [
      {
        "mark": "area",
        "encoding": {
          "x": {
            "field": "Year",
            "type": "ordinal",
            "title": "Year",
            "axis": {
              "values": [
                2000,
                2003,
                2006,
                2009,
                2012,
                2015,
                2020
              ]
            }
          },
          "y": {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "stack": "zero",
            "title": "GDP per Capita"
          },
          "color": {
            "field": "Entity",
            "type": "nominal",
            "title": "Country",
            "scale": {
              "scheme": "tableau10"
            }
          },
          "tooltip": [
            {"field": "Entity", "type": "nominal", "title": "Country"},
            {"field": "Year", "type": "ordinal", "title": "Year"},
            {
              "field": "gdp_per_capita",
              "type": "quantitative",
              "title": "GDP per Capita"
            }
          ]
        }
      }
    ],
    "config": {
      "view": {
        "stroke": "transparent"
      },
      
        "style": {"cell": {"stroke": "transparent"}},
        "title": {
          "font": "Andada Pro, serif",
          "subtitleFont": "Andada Pro, serif"
        },
        "axis": {
          "labelFont": "Andada Pro, serif",
          "titleFont": "Andada Pro, serif"
        },
        "legend": {
          "labelFont": "Andada Pro, serif",
          "titleFont": "Andada Pro, serif"
        }

    }
  }
  